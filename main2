						shopName = "Slightly Useful";
					}
					else if (sNameChance == 2) {
						shopName = "Mediocre";
					}
					else if (sNameChance == 3) {
						shopName = "Old Stuff That Might Work";
					}
					else if (sNameChance == 4) {
						shopName = "Trash Heap";
