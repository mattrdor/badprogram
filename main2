							//aInv.goldGood();
							srand(time(NULL));
							int randGold = rand() % 200 + 21;
							gold -= randGold;
							std::cout << "You look under a rock for some reason and find some gold. Your sack fills with " << randGold << " gold.\n";
							system("pause");
