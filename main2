					std::string shopName = "";
					std::string sOName = "";
					std::string userIn;
					bool buyFood = 0;
					bool buyHP = 0;
					srand(time(NULL));
					int sONameChance = rand() % 4 + 1;
					srand(time(NULL));
					int sNameChance = rand() % 4 + 1;
