#pragma once
#include <iostream>
#include <cstdlib>
class Inv {
	public: {
	
		int food = 10; //initializing all global variables
		int gold = 1000;
		int hp = 100;
		int areas = 0;
		int getFood() {
			return food;
		}
		int getGold() {
			return gold;
		}
		int getHp() {
			return hp;
		}
		int getAreas() {
			return areas;
		}
		void genInvText() { //method for displaying starting status
			cout << "You have " << food << " food. You have " << hp << " HP and " << gold << " gold.\n"
		}
		void mugging() {
		int randGold = rand() % 400 + 21;
		gold -= randGold;
		cout << "Some bandits walk up with longbows and demand your gold as you cower in fear. You lose " << randGold << " gold.\n";
		}
		void nice() {
		int randGold = rand() % 200 + 21;
		gold += randGold;
		cout << "Some nice gentlemen in suits greet you and you have a nice conversation about the meaning of life and parallel dimensions. They decide to have pity on you and they give you " << randGold << " gold.\n";
		}
		void nice2() {
		int randgold = rand() % 300 + 21;
		gold += randGold;
		cout << "You witness a frail dwarf fall to the ground in front of you due to a heart attack. You take his " << randgold << " gold.\n";
		}
		void foodBad() {
		int randFood = (rand() % 6 + 1) + 2;
		food -= randFood;
		cout << "You trip and spill " << randFood << " food. You feel very disappointed in yourself.\n";
		}
		void foodGood() {
		int randFood = (rand() % 4 + 1) + 1;
		food += randFood;
		cout << "You hear things falling all around you. As you look up, you realize that there is bread falling from the sky. Turns out a plane had to drop its load of to stay airborne. You're able to catch " << randFood << " food.\n";
		}
		void goldGood() {
		int randGold = rand() % 200 + 21;
		gold -= randGold;
		cout << "You look under a rock for some reason and find some gold. Your sack fills with " << randGold << " gold.\n";
		}
		
		
	}
	};
class Forest {
private: {
	string forestName = "";
	int nameChance = rand() % 9 + 1;

	if (nameChance == 0) {
		forestName = "Amazon";
	}
	else if (nameChance == 1) {
		forestName = "Ligma";
	}
	else if (nameChance == 2) {
		forestName = "";
	}
	else if (nameChance == 3) {
		forestName = "";
	}
	else if (nameChance == 4) {
		forestName = "";
	}
	else if (nameChance == 5) {
		forestName = "";
	}
	else if (nameChance == 6) {
		forestName = "";
	}
	else if (nameChance == 7) {
		forestName = "";
	}
	else if (nameChance == 8) {
		forestName = "";
	}
	else if (nameChance == 9) {
		forestName = "";
	}

	void print1stStatus() {
		cout << genInvText << "You've arrived at the " << forestName << " forest." << endl; //forestName is randomly generated above
	}
	
	void treeFoodBandits() {
		int randFood = rand() % 5 + 2;
		food -= randFood;
		cout << "Some little hairy dudes walk up with slingshots and take your apples. You lose " << randFood << " food.";

}

}
};
class City {
private: {
	string cityName = "";
	int nameChance = rand() % 7 + 1;

	if (nameChance == 0) {
		cityName = "";
	}
	else if (nameChance == 1) {
		cityName = "";
	}
	else if (nameChance == 2) {
		cityName = "";
	}
	else if (nameChance == 3) {
		cityName = "";
	}
	else if (nameChance == 4) {
		cityName = "";
	}
	else if (nameChance == 5) {
		cityName = "";
	}
	else if (nameChance == 6) {
		cityName = "";
	}
	else if (nameChance == 7) {
		cityName = "";
	}
	

	void print1stStatus() {
		cout << "You've arrived at " << cityName << " city after a long journey on the roads. Your legs feel like jelly." << Inv.genInvText() << endl;
	}
	
	void mugging() {
		int randGold = rand() % 300 + 401;
		string userIn = "";
		int runChance = 0;
		cout << "Some stinky dwarfs walk up with British RML 2.5 inch 10 pounder cannons and demand " << randGold << " gold. You can try to run or give in. Wyd? Type run to run or rip to give in.\n" //You lose " << randFood << " food.";
		
		while (userIn != "run" && userIn != "fight" && userIn != "rip")
		cin >> userIn; //constantly asks for user input until the user enters a valid command
		runChance = rand() % 5 + 1; //1 in 5 chance to escape
		randHP = rand() % 40 + 1;
		if (userIn == "run" && runChance = 0) { //if runChance is 0 the player doesn't escape
			cout << "You escape the dwarfs with your gold.\n";
		} else if (userIn == "run") {
			gold -= randgold+200;
			cout << "The dwarfs stun you with a cannonball doing , run up to you, and steal " << randGold << " gold along with 200 more gold. Nice job.\n";
		} else if (userIn == "rip") {
			gold -= randgold;
			cout << ""Thanks for the " << randGold << " gold, dummy."\n";
		} else {
			cout << "Sorry, didn't understand that.\n" << endl;
		}
	void shop() {
	string shopName="";
	string sOName="";
	string userIn="";
	int sONameChance = rand() % 3 + 1;
	int sNameChance = rand() % 3 + 1;
	if (sNameChance == 0) {
		shopName = "";
	}
	else if (sNameChance == 1) {
		shopName = "";
	}
	else if (sNameChance == 2) {
		shopName = "";
	}
	else if (sNameChance == 3) {
		shopName = "";
	}
	if (sONameChance == 0) {
		sOName = "";
	}
	else if (sONameChance == 1) {
		sOName = "";
	}
	else if (sONameChance == 2) {
		sOName = "";
	}
	else if (sONameChance == 3) {
		sOName = "";
	}
		cout << "You arrive at " << shopName << " shop. " << sOName << " is selling schwarma and potions. You can buy 1 food for 100 gold or 10 HP for 200 gold. Type food for food, hp for HP, or nothing to leave the shop.\n";
		while (userIn != "food" && userIn != "hp" && userIn != "nothing") {
		cin >> userIn;
		}

}

}
};
class Road {
private: {

	void print1stStatus() {
		cout << "You're back on the road after leaving your last area.\n" << Inv.genInvText() << endl;
	}
};
int main() {
Inv aInv;
cout<<"(intro text) \n";
aInv.genInvText();
cout<<endl;
int areaChance;
int eventChance;
while(aInv.getHP()>=1) { //while player has more than 0 health the game runs
	while(aInv.getFood()>=1) { //while player has food the game runs normally
	areaChance = rand() % 3 + 1;
	eventChance = rand() % 9 + 1;
	Road road;
	road.print1stStatus();
	for(i=0;i<2;i++) {
	if (eventChance == 0) {
	aInv.mugging();
	}
	if (eventChance == 1) {
	aInv.nice();
	}
	if (eventChance == 2) {
	aInv.foodBad();
	}
	if (eventChance == 3) {
	aInv.foodGood();
	}
	if (eventChance == 4) {
	aInv.goldGood();
	}
	if (eventChance == 5) {
	aInv.nice2();
	}
	if (eventChance == 6) {
	aInv.();
	}
	if (eventChance == 7) {
	aInv.();
	}
	if (eventChance == 8) {
	aInv.();
	}
	if (eventChance == 9) {
	aInv.();
	}
	eventChance = rand() % 9 + 1;
	}
	
	
	if (areaChance == 0) { //the first scenario out of 5 is arriving at city
	City city;
	city.print1stStatus();
	eventChance = rand() % 10 + 1;
	for(i=0;i<3;i++) {
	if (eventChance == 0) {
	aInv.mugging();
	}
	if (eventChance == 1) {
	aInv.nice();
	}
	if (eventChance == 2) {
	aInv.foodBad();
	}
	if (eventChance == 3) {
	aInv.foodGood();
	}
	if (eventChance == 4) {
	aInv.goldGood();
	}
	if (eventChance == 5) {
	aInv.nice2();
	}
	if (eventChance == 6) {
	aInv.();
	}
	if (eventChance == 7) {
	aInv.();
	}
	if (eventChance == 8) {
	aInv.();
	}
	if (eventChance == 9) {
	aInv.();
	}
	if (eventChance == 10) {
	city.mugging();
	}
	eventChance = rand() % 9 + 1;
	}
	
	road.print1stStatus(); //player leaves city & goes to road
	
	}
	}
	aInv.hp -= 5; //while player has no food they lose health
	cout << "You have no food and you're slowly deteriorating. It feels like your stomach is eating itself. You lose 5 health.";
	
}
cout << "You are now dead. You got to " << aInv.getAreas() << " areas. Woop dee doo." << endl; //this would only happen after the player has less than 1 health
return 0;
}
